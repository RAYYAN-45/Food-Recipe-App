<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewFood"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="20dp"
    card:cardCornerRadius="20dp"
    card:cardUseCompatPadding="true"
    card:cardElevation="2dp"
    card:cardBackgroundColor="#fcf2e4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:background="@drawable/bg_food_border">

        <!-- GAMBAR MAKANAN (KIRI) -->
        <ImageView
            android:id="@+id/imgFood"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_circle"
            android:clipToOutline="true"
            android:layout_alignParentStart="true" />

        <!-- ICON BINTANG (KANAN ATAS) -->
        <ImageView
            android:id="@+id/imgStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star_border"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp" />


        <!-- TITLE (KANAN GAMBAR) -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toEndOf="@id/imgFood"
            android:layout_marginStart="14dp"
            android:layout_alignTop="@id/imgFood" />

        <!-- DESCRIPTION (BAWAH TITLE) -->
        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi makanan akan tampil di sini..."
            android:textSize="15sp"
            android:textColor="#3A3A3A"
            android:lineSpacingExtra="4dp"
            android:maxLines="4"
            android:layout_below="@id/txtTitle"
            android:layout_toEndOf="@id/imgFood"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>